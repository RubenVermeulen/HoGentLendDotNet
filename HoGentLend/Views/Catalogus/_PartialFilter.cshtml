


<div id="filter">

    @using (Html.BeginForm("Index", "Catalogus", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-4">
                <input type="text" name="filter" class="form-control" placeholder="Zoekterm">
            </div>
            <div class="col-md-3">
                @Html.DropDownList("doelgroepId", ViewBag.Doelgroepen as SelectList,
                    "--selecteer doelgroep--", new {@class = "form-control"})
            </div>
            <div class="col-md-3">
                @Html.DropDownList("leergebiedId", ViewBag.Leergebieden as SelectList,
                    "--selecteer leergroep--", new {@class = "form-control"})
            </div>
            <div class="col-md-2">
                <input type="submit" value="Zoeken" class="btn btn-primary form-control" />
            </div>



        </div>
    }
</div>